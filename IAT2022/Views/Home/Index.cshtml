@using IAT2022.ViewModels
@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel

<div class="text-center">
    <h1 class="display-4">Dina Projekt</h1> 
</div>



<div class=HomeProjects>
    @foreach (var item in Model.Projects)
    {
        <div class="SingleProject">
            <div>Skapad: @item.Created</div>
        <a
        class="projectLinks" asp-controller="ProjectInformation" asp-action="ProjectInformation" asp-route-id="@item.Id">
        <div> 
            
            <h4>@item.ProjectName</h4>
            </div>
        <div>
        
            
            <p id="descP">@item.Description</p>
        </div>
        <div>
        
            
            <p id="descP">@item.ProjectType</p>
        </div>
        @if (item.Tags != null)
        {
            <div class ="tagsForProject"> 
                
            @foreach (var tag in item.Tags)
                {
                    
                    <p>@tag.Description</p> 
                }
            </div>
        }
        </a>
        <a id="editBtn" class="btn-save" asp-controller="EditProject" asp-action="EditProject" asp-route-id="@item.Id"></a>
       
        </div>
    }


</div>