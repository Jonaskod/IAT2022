@using IAT2022.ViewModels
@model RegisterProjectViewModel
<h1>Klicka på den kategori du vill registrera</h1>


<div class="PathChooser">
    @if (Model.StepTwo(Model.ProjectPoco)&&Model.StepOne(Model.ProjectPoco))
    {           
                <div>
                    <a id="CustomerPath" asp-action="Customer" asp-controller="Assessment" class="BtnVisitedPath">Behov <i class="fa-solid fa-check"></i></a>
                    <a id="ProductPath" asp-action="Product" asp-controller="Assessment" class="BtnVisitedPath">Lösning <i class="fa-solid fa-check"></i></a>
                </div>
                <div>
                    <a id="BusinessPath" asp-action="Business" asp-controller="Assessment" class="BtnVisitedPath">Marknad <i class="fa-solid fa-check"></i></a>
                    <a id="IPRPath" asp-action="IPR" asp-controller="Assessment" class="BtnVisitedPath">IPR <i class="fa-solid fa-check"></i></a>
                </div>
                

                @if (Model.CheckIfAnswerd(Model.ProjectPoco, "Team"))
                {
                    <a id="TeamPath" asp-action="Team" asp-controller="Assessment" class="BtnVisitedPath">Team <i class="fa-solid fa-check"></i></a>
                    
                }
                else
                {
                    <a id="TeamPath" asp-action="Team" asp-controller="Assessment" class="BtnChoosePath">Team</a>

                }

                @if (Model.CheckIfAnswerd(Model.ProjectPoco, "Finance"))
                {
                    <a id="FinancePath" asp-action="Finance" asp-controller="Assessment" class="BtnVisitedPath">Finansiering <i class="fa-solid fa-check"></i></a>
                    

                }
                else{
                    <a id="FinancePath" asp-action="Finance" asp-controller="Assessment" class="BtnChoosePath">Finansiering</a>

                }
                
    }
    else if (Model.StepOne(Model.ProjectPoco))
    {
                
              <div>
                    <a id="CustomerPath" asp-action="Customer" asp-controller="Assessment" class="BtnVisitedPath">Behov <i class="fa-solid fa-check"></i></a>
                    <a id="ProductPath" asp-action="Product" asp-controller="Assessment" class="BtnVisitedPath">Lösning <i class="fa-solid fa-check"></i></a>
             </div>
                @if (Model.CheckIfAnswerd(Model.ProjectPoco, "Business"))
                {
                    <a id="BusinessPath" asp-action="Business" asp-controller="Assessment" class="BtnVisitedPath">Marknad <i class="fa-solid fa-check"></i></a>
                    
                }
                else
                {
                    <a id="BusinessPath" asp-action="Business" asp-controller="Assessment" class="BtnChoosePath">Marknad</a>

                }

                @if (Model.CheckIfAnswerd(Model.ProjectPoco, "IPR"))
                {
                    <a id="IPRPath" asp-action="IPR" asp-controller="Assessment" class="BtnVisitedPath">IPR <i class="fa-solid fa-check"></i></a>
                    

                }
                else{
                     <a id="IPRPath" asp-action="IPR" asp-controller="Assessment" class="BtnChoosePath">IPR</a>

                }
               
    }
    else
    {
        
            
            @if (Model.CheckIfAnswerd(Model.ProjectPoco, "Customer"))
            {
              <a id="CustomerPath" asp-action="Customer" asp-controller="Assessment" class="BtnVisitedPath">Behov <i class="fa-solid fa-check"></i></a>
               
            }
            else
            {
               <a id="CustomerPath" asp-action="Customer" asp-controller="Assessment" class="BtnChoosePath">Behov</a>
               

            }

            @if (Model.CheckIfAnswerd(Model.ProjectPoco, "Product"))
            {
                <a id="ProductPath" asp-action="Product" asp-controller="Assessment" class="BtnVisitedPath">Lösning <i class="fa-solid fa-check"></i></a>
                

            }
            else{
                <a id="ProductPath" asp-action="Product" asp-controller="Assessment" class="BtnChoosePath">Lösning</a>

            }
        
    }
      <div class="saveDiv">
            <a class="btn-save" asp-action="ProjectInformation" asp-controller="ProjectInformation" asp-route-id="@Model.ProjectPoco.Id">Spara och avsluta</a>

        </div>
        <div >
            <a onclick="showHelp()" class="informationButton"><i class="fa-solid fa-circle-info"></i></a>
        </div>
</div>
 <div id="helpInformation" style="display:none">
     <div>
        <h1>Välkommen! Här kommer information om hur registreringen fungerar!</h1>
        
        <div>
            <p>Registreringen fungerar genom att du väljer en kategori av sex möjliga. Du svarar på 10-12 påståenden inom kategorin. Dessa relaterar till en nivå i kategorin för att lättare utvärdera din innovation.</p>
            <p>Du väljer en kategori genom att klicka på boxen med den kategori du vill registrera.</p>
            <p>Du går sedan igenom ett antal påståenden inom kategorin och klickar på de påståenden som stämmer för din nuvarande situation.</p>
            <p>Dessa svar sammanställs sedan till en tabell där du får en visuell representation av hur din innovation har utvecklats i nuläget.</p>
            <p>Du kan alltid uppdatera dina svar genom att klicka på kategorin inne i projektet från startsidan.</p>
        </div>
        </div>
        <div>
        <div class="categoryInfo">
            <div>
                <h3>Behov</h3>
                <p>Med behov menas utforskande av det behov som din innovation är tänkt att bemöta.</p>
            </div>
        <div>
            <h3>Lösning</h3>
            <p>Med lösning menas din innovation och utvecklingen av idén samt realiseringen av en produkt eller tjänst.</p>
        </div>
        <div>
            <h3>Team</h3>
            <p>Detta är kategorin som undersöker hur ditt sammarbete med andra som kan hjälpa dig att utveckla din innovation</p>
        </div>
        <div>
            <h3>IPR</h3>
            <p>Här undersöks din utveckling för immateriella rättigheter för innovationen om så skulle vara relevant.</p>
        </div>
        <div>
            <h3>Marknad</h3>
            <p>Här undersöks vilken potentiell marknad din innovation kan befinnas i samt utvecklingen inom denna.</p>
        </div>
        <div>
            <h3>Finansiering</h3>
            <p>Här undersöks finansieringen för realiseringen av din innovation.</p>
        </div>
        </div>
        </div>
        <div>
            <button onclick="closeHelp()" class="btn-save">Ok</button>
        </div>
    </div> 

@if (@Model.InformationPush(@Model.ProjectPoco))
{
    <div id="informationMessage">
        <h1>Välkommen! Här kommer information om hur registreringen fungerar!</h1>
        
        <div class="informationText">
            <p>Du kommer nu få välja mellan två olika kategorier. Tanken med dessa två kategorier är att du skall besvara påståenden som stämmer för din innovation.</p>
            <p>Du kommer få börja med att läsa fyra påståenden gällande din innovation. Klicka på de påståenden som stämmer med utvecklingen av din innovation.</p>
            <p>Därefter kan du klicka dig vidare på pilen till höger för att få läsa nästa fyra påståenden. Du kan gå tillbaka genom att klicka på pilen till vänster.</p>
            <p>När du är klar klickar du på knappen "Spara" för att kunna välja och registrera ytterligare kategorier.</p>
        </div>
        <div>
            <p>När du är klar kommer en sammanställning av dina svar visas och en visuell representation av vilka nivåer du befinner dig på i din utveckling.</p>
        </div>
        <div>
            <button onclick="informationRecieved()" class="btn-save">Ok</button>
        </div>
    </div> 
}
    