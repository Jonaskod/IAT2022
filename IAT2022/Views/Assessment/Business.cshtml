@using IAT2022.ViewModels
@model ProjectInformationViewModel
  <h3>
    <span class="blue-color"></span>Välj dom alternativ som stämmer för ditt projekt
  </h3>
<div class ="slideshow-container"> 

   


    <section class="app">
        @*<i class="fa fa-rocket"></i>*@

            
                
        @{
            int counter = 0;

                        
                             
                            @for (var x = 0; x < 3 ; x++)
                            {
                                    
                                    <div class="mySlides">

                                     @for (var i = 0; i < 4; i++)
                                     {
                                         @if (counter < Model.BusinessQuestions.Count())
                                         {
                                            <article class="feature">
                                            <input type="checkbox" id="feature" asp-for="Project.Business[counter].Result" name="checkboxBusiness"/>
                                            <div>
                                            <span>
                                            @Model.BusinessQuestions[counter].QuestionDescription
                                            

                                            </span>
                                            </div>
                                            </article>
                                             counter++;

                                             
                                         }
                                    }
                                
                                
                                    </div>

                                   
                            }
                            
                    }
                    
                </div>
            
               
            

            
    </section>
</div>
            <a class="next" onclick="plusSlides(1)">Nästa</a>
            <a class="prev" onclick="plusSlides(-1)">Tillbaka</a>
            

            </div>

            <div class="dot-container">
                <span class="dot" onclick="currentSlide(1)"></span> 
                <span class="dot" onclick="currentSlide(2)"></span> 
                <span class="dot" onclick="currentSlide(3)"></span> 
            </div>


  


<h3>Motivera dina svar med en kommentar</h3>
@if (Model.Project.BusinessComment == null)
                {
                        @using (Html.BeginForm("ChoosePathBusiness","RegisterProject",FormMethod.Post))
                    {
                        <div class="CategoryCommentDiv">
                        <textarea name="input" class="Testar"></textarea>
                        </div>
                        <input class="btn-save" type="submit" value="Spara"/>
                        }
                    }
                    else
                    {
                         @using (Html.BeginForm("ChoosePathBusiness","RegisterProject",FormMethod.Post))
                        {
                            <div class="CategoryCommentDiv">
                            <textarea  name="input" class="Testar">@Model.Project.BusinessComment.ToString()</textarea>
                            </div>
                            <input class="btn-save" type="submit" value="Spara"/>
                        }
                    }
 
  
</section>
