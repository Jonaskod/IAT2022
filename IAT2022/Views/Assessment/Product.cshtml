@using IAT2022.ViewModels
@model ProjectInformationViewModel
  <h3>
    <span class="blue-color"></span>Välj dom alternativ som stämmer för ditt projekt
  </h3>
<div class ="slideshow-container"> 

   


    <section class="app">
        @*<i class="fa fa-rocket"></i>*@

            
                
        @{
            int counter = 0;

                        
                             
                            @for (var x = 0; x < 3 ; x++)
                            {
                                    
                                    <div class="mySlides">

                                     @for (var i = 0; i < 4; i++)
                                     {
                                         @if (counter < Model.ProductQuestions.Count)
                                         {
                                            <article class="feature">
                                            <input type="checkbox" id="feature" asp-for="Project.Product[counter].Result" name="checkboxProduct"/>
                                            <div>
                                            <span>
                                            @Model.ProductQuestions[counter].QuestionDescription
                                            </span>
                                            </div>
                                            </article>
                                             counter++;

                                             
                                         }
                                    }
                                
                                
                                    </div>

                                   
                            }
                            
                    }
                    
                </div>
            
               
            

            
    </section>
</div>
            <div class="AssementDiv">
                <button class="prev" id="prevBtn" onclick="plusSlides(-1)"><i class="fa-solid fa-left-long"></i> </button>
                @using (Html.BeginForm("ChoosePathProduct","RegisterProject",FormMethod.Post))
                        {
                            <input class="btn-save" type="submit" value="Spara"/>
                        }
                <button class="next" id="nextBtn" onclick="plusSlides(1)"><i class="fa-solid fa-right-long"></i></button>


            </div>
            

            </div>

            <div class="dot-container">
                <span class="dot" onclick="currentSlide(1)"></span> 
                <span class="dot" onclick="currentSlide(2)"></span> 
                <span class="dot" onclick="currentSlide(3)"></span> 
            </div>


  <h3 id="pageCounter"></h3>

  
</section>


     