@using IAT2022.ViewModels
@model EditProjectViewModel
<h1>Redigera ditt projekt</h1>

<form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
                <label class="titlestyle">Projektnamn</label>
             <div class="form-group">
                <input asp-for="Name" class="NameInput" value="@Model.Project.ProjectName"/>
                <span asp-validation-for="Name" class="text-danger"></span>
             </div>

                
            </div>
                <label class="titlestyle">Beskrivning</label>
             <div class="form-group">
                <textarea asp-for="Description" placeholder="@Model.Project.Description" maxlength="500" id="DescInput" class="Testar">@Model.Description</textarea> 
                <span asp-validation-for="Description" class="text-danger"></span>
             </div>
            
             <div class="TypeBox">
                 <div>
                <label class="titlestyle">Typ av Projekt</label>
                </div>

            <div>
                <div class="LabelHeader">
                <label class="titlestyle">Välj kategori som passar ditt projekt</label>
                </div>
                <div class="TagContainer">
            @for (var i = 0; i < @Model.Tags.Count(); i++)
            {

               
                    @if (@Model.Tagcheck(@Model.Tags[i]))
                    {
                        
                         <article class="tagstyle">
                        <input class="tagstyle" asp-for="TagsBool[i]" type="checkbox" checked="checked" id="tag"/>
                        <div class="tagstyle">
                            <span>
                            @Model.Tags[i].Description
                            </span>
                        </div>
                            </article>
                        }
                        else
                        {
                            <article class="tagstyle">
                                <input class="tagstyle" asp-for="TagsBool[i]" type="checkbox" id="tag"/>
                                <div class="tagstyle">
                                    <span>
                                    @Model.Tags[i].Description
                                    </span>
                                </div>
                                </article>
                            

                        }
                

            }
                </div>
            
            


            </div>
                 <button type="submit" value="submit" class="btn-save">Spara</button>

                <button type="submit" class="btn-save" asp-area="" asp-controller="Home" asp-action="Index">Cancel</button>

       
        </form>