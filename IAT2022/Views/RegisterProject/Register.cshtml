@using IAT2022.ViewModels
@model RegisterProjectViewModel


<form method="post">
            <div @*asp-validation-summary="All"*@ class="text-danger"></div>
                <label class="titlestyle">Projektnamn</label>
             <div class="form-group">
                <input asp-for="Name" class="NameInput"/>
                <br />
                <span asp-validation-for="Name" class="text-danger"></span>
             </div>
            </div>
                <label class="titlestyle">Beskrivning</label>
             <div class="form-group">
                <textarea asp-for="Description" placeholder="Här kan du om du vill beskriva ditt projekt &#10;max 500 bokstäver" maxlength="500" id="DescInput" class="Testar"></textarea> 
                <span @*asp-validation-for="Description"*@ class="text-danger"></span>
             </div>
            
                <div class="LabelHeader">
                <label class="titlestyle">Välj dem alternativ som passar ditt projekt</label>
                </div>

                
            <div class="TagContainer">
            @for (var i = 0; i < Model.Tags.Count(); i++)
            {
                <article class="tagstyle">
                <input class="tagstyle" asp-for="TagsBool[i]" type="checkbox" id="tag"/>
                <div class="tagstyle">
                    <span>
                    @Model.Tags[i].Description
                    </span>
                </div>
                </article>
            }
                </div>
            </div>
                 <button type="submit" value="submit" class="btn-save">Registrera</button>
                <button type="submit" class="btn-save" asp-area="" asp-controller="Home" asp-action="Index">Avbryt</button>
        </form>