@using IAT2022.ViewModels
@model EditProjectViewModel


<form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
                <label class="titlestyle">Namn</label>
             <div class="form-group">
                <input asp-for="Name" class="NameInput" value="@Model.Project.ProjectName"/>
                <span asp-validation-for="Name" class="text-danger"></span>
             </div>

                
            </div>
                <label class="titlestyle">Beskrivning</label>
             <div class="form-group">
                <textarea asp-for="Description" placeholder="Här kan du om du vill beskriva ditt projekt &#10;max 500 bokstäver" maxlength="500" id="DescInput" class="Testar">@Model.Project.Description</textarea> 
                <span asp-validation-for="Description" class="text-danger"></span>
             </div>
            
             <div class="TypeBox">
                 <div>
                <label class="titlestyle">Typ av Projekt</label>
                </div>
                <div class="radio">
                    @if (Model.Project.ProjectType == "Process")
                    {
                    <input label="Process" asp-for="TypeOfProject" type="radio" id="Process" class="TypeClass" name="TypeOfProject" checked="checked"  value="Process">

                    }
                    else
                    {
                       <input label="Process" asp-for="TypeOfProject" type="radio" id="Process" class="TypeClass" name="TypeOfProject"  value="Process">
                    }
                    @if(Model.Project.ProjectType == "Produkt")
                    {
                         <input label="Produkt" asp-for="TypeOfProject" type="radio" id="Produkt" class="TypeClass" name="TypeOfProject" checked="checked" value="Produkt">
                    }
                    else
                    {
                        <input label="Produkt" asp-for="TypeOfProject" type="radio" id="Produkt" class="TypeClass" name="TypeOfProject" value="Produkt">
                    }
                    @if(Model.Project.ProjectType == "Tjänst")
                    {
                        <input label="Tjänst" asp-for="TypeOfProject" type="radio" id="Tjänst" class="TypeClass" name="TypeOfProject" checked="checked"  value="Tjänst">
                    }
                    else
                    {
                        <input label="Tjänst" asp-for="TypeOfProject" type="radio" id="Tjänst" class="TypeClass" name="TypeOfProject" value="Tjänst">
                    }

                
                </div>
            <div>
                <div class="LabelHeader">
                <label class="titlestyle">Välj kategori som passar ditt projekt</label>
                </div>
                <div class="TagContainer">
            @for (var i = 0; i < @Model.Tags.Count(); i++)
            {

               
                    @if (@Model.Tagcheck(@Model.Tags[i]))
                    {
                        
                         <article class="tagstyle">
                        <input class="tagstyle" asp-for="TagsBool[i]" type="checkbox" checked="checked" id="tag"/>
                        <div class="tagstyle">
                            <span>
                            @Model.Tags[i].Description
                            </span>
                        </div>
                            </article>
                        }
                        else
                        {
                            <article class="tagstyle">
                                <input class="tagstyle" asp-for="TagsBool[i]" type="checkbox" id="tag"/>
                                <div class="tagstyle">
                                    <span>
                                    @Model.Tags[i].Description
                                    </span>
                                </div>
                                </article>
                            

                        }
                

            }
                </div>
            
            


            </div>
                 <button type="submit" value="submit" class="btn-save">Spara</button>

                <button type="submit" class="btn-cancel" asp-area="" asp-controller="Home" asp-action="Index">Cancel</button>

       
        </form>